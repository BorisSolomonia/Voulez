# ===========================================
# Wolt Sync System - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ----- Fina API Configuration -----
# The Fina POS system API endpoint and credentials
FINA_API_URL=http://your-fina-server:8091/api
FINA_LOGIN=your_fina_username
FINA_PASSWORD=your_fina_password

# ----- Wolt API Configuration -----
# Base URL for Wolt POS Integration API (default is production)
# WOLT_API_BASE=https://pos-integration-service.wolt.com/venues

# ----- Store Configuration -----
# Comma-separated list of Fina Store IDs to load. Only stores listed here will run.
WOLT_STORES=4

# Per-store metadata (replace 4 with your Fina Store ID)
STORE_4_NAME=Voulez-Vous (Store 4)
# Optional: explicitly disable/enable store without code changes (default: true)
STORE_4_ENABLED=true
# Optional: override Wolt API base per store (default uses WOLT_API_BASE)
# STORE_4_WOLT_API_BASE=https://pos-integration-service.wolt.com/venues

# Required per-store credentials (repeat for every store listed in WOLT_STORES)
WOLT_VENUE_ID_4=
WOLT_USER_4=
WOLT_PASS_4=

# ----- Service Configuration -----
# Optional: Override the default health check port (default: 3000)
# PORT=3000
# HEALTH_PORT=3000

# Optional: Sync pacing overrides
# WOLT_BATCH_SIZE=50
# WOLT_BATCH_DELAY_MS=2000
# WOLT_FIRST_SYNC_BATCH_SIZE=1
# WOLT_FIRST_SYNC_BATCH_DELAY_MS=10000

# Optional: Per-store sync pacing overrides (recommended for first sync)
# For example, to do a one-shot first sync for Store 4 with huge batches:
# STORE_4_WOLT_FIRST_SYNC_BATCH_SIZE=10000
# STORE_4_WOLT_FIRST_SYNC_BATCH_DELAY_MS=0
# STORE_4_WOLT_BATCH_SIZE=500
# STORE_4_WOLT_BATCH_DELAY_MS=1000

# Optional: Wolt rate-limit guardrails (adaptive pacing)
# WOLT_RATE_LIMIT_MIN_INTERVAL_MS=1100
# WOLT_LEARN_MIN_INTERVAL_FROM_RETRY_AFTER=true
# WOLT_ENFORCE_LEARNED_MIN_INTERVAL_AFTER_SUCCESS=true
# WOLT_MAX_LEARNED_MIN_INTERVAL_MS=3600000
# WOLT_RETRY_AFTER_BUFFER_MS=1000
# WOLT_RETRY_AFTER_JITTER_MS=250

# Optional: For single-store mode (PM2), set the store ID
# STORE_ID=4

# ----- Test Environment (for test-venue command) -----
# TEST_WOLT_VENUE_ID=
# TEST_WOLT_USER=
# TEST_WOLT_PASS=

# ----- Ad-hoc credential verifier (verify_creds.ts) -----
# WOLT_TEST_URL=
# WOLT_TEST_USER=
# WOLT_TEST_PASS=
